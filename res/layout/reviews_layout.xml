<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/pageReviewAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="32dp"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/pageReviewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pageReviewAvatar"
        android:layout_centerHorizontal="true"
        android:text="user"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/pageReviewFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pageReviewUser"
        android:layout_alignBottom="@+id/pageReviewUser"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="Following" />

    <TextView
        android:id="@+id/pageFeedUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pageReviewFollowing"
        android:layout_marginTop="20dp"
        android:text="Field0"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:text="Field4"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/pageReviewUser"
        android:text="Field2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pageFeedUserName"
        android:layout_alignBottom="@+id/pageFeedUserName"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/pageReviewUser"
        android:text="Field1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/pageReviewFollowing"
        android:layout_marginLeft="14dp"
        android:text="Field3"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/pageReviewScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pageReviewScore1"
        android:layout_alignBottom="@+id/pageReviewScore1"
        android:layout_centerHorizontal="true"
        android:text="2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/pageReviewScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pageReviewScore0"
        android:layout_alignBottom="@+id/pageReviewScore0"
        android:layout_alignRight="@+id/pageReviewAvatar"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/pageReviewScore0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pageFeedUserName"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/pageReviewScore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pageReviewScore2"
        android:layout_alignBottom="@+id/pageReviewScore2"
        android:layout_alignLeft="@+id/textView4"
        android:layout_marginLeft="14dp"
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/pageReviewScore4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pageReviewScore3"
        android:layout_alignBottom="@+id/pageReviewScore3"
        android:layout_alignRight="@+id/pageReviewFollowing"
        android:text="4"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/pageReviewReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pageReivewImage"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/pageReivewImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pageReviewScore2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>