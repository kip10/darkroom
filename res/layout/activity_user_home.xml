<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserHomeActivity" >

    <ImageView
        android:id="@+id/userHomeAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/userHomeUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userHomeAvatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/userHomeUploadsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userHomeUsername"
        android:layout_marginTop="26dp"
        android:text="Uploads" />

    <Button
        android:id="@+id/userHomeFollowersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userHomeFollowingButton"
        android:layout_alignBottom="@+id/userHomeFollowingButton"
        android:layout_alignParentRight="true"
        android:text="Followers" />

    <Button
        android:id="@+id/userHomeFollowingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userHomeUploadsButton"
        android:layout_alignBottom="@+id/userHomeUploadsButton"
        android:layout_toLeftOf="@+id/userHomeFollowersButton"
        android:text="Following" />

    <TextView
        android:id="@+id/userHomeAboutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userHomeUploadsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/userHomeFollowersButton"
        android:layout_below="@+id/userHomeUploadsButton"
        android:layout_marginTop="28dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>