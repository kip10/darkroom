<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/uploadLayoutPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="34dp"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/uploadLayoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadLayoutUserName"
        android:layout_centerHorizontal="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/uploadLayoutUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/uploadLayoutPicture"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/uploadLayoutRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/uploadLayoutUserName"
        android:layout_alignBottom="@+id/uploadLayoutUserName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:text="9.9"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/uploadLayoutTitle"
        android:layout_alignBottom="@+id/uploadLayoutTitle"
        android:layout_toRightOf="@+id/uploadLayoutUserName"
        android:text="Following" />

</RelativeLayout>
